{% extends "layouts/master.twig" %}

{% block css %}
<link href="css/login.css" rel="stylesheet">
{% endblock %}

{% block jumbotron %}
<h1><span class='glyphicon glyphicon-duplicate'></span> Learning Guide Management System</h1>
<p class="lead">An easy way to manage your Learning Guides</p>
{% endblock %}

{% block content %}
<div class="wrapper">
	<form class="form-signin" action="{{ urlFor('/login') }}" method="post">
 		<h2 class="form-signin-heading">Please login</h2>
		<input type="text" class="form-control" name="username" placeholder="User ID e.g. 30001234" required="" autofocus="" />
 		<input type="password" class="form-control" name="password" placeholder="Password" required=""/>
 		<label class="checkbox"><input type="checkbox" value="remember-me" id="rememberMe" name="rememberMe"> Remember me</label>
  		<button class="btn btn-lg btn-primary btn-block" type="submit" name='submit' value='submit'>Login</button>
	</form>
</div>
{% endblock %}
